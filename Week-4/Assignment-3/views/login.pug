extends base

block content
    main.main
        .login-form
            h2.login__heading Log into your account
            form.form
                .form__group
                    label.form__label(for='email') Email 
                    input#email.form__input(type='email', placeholder='you@example.com', required)
                .form__group
                    label.form__label(for='password') Password
                    input#password.form__input(type='password', placeholder='••••••••', required)
                .form__group
                    button.btn Login
                .form__group
                    p.form__link Don't have an account? Click <a href="/signup" style="font-weight: bold; text-decoration: none">here</a> to sign up now!